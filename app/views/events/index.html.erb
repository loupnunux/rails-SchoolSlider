<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th>Day</th>
      <th>Allday</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.comment %></td>
        <td><%= event.day %></td>
        <td><%= event.allday %></td>
        <% if event.allday != true %>
          <td><%= event.start.strftime "%H:%M" %></td>
          <td><%= event.end.strftime "%H:%M" %></td>
        <% else %>
          <td>-</td>
          <td>-</td>
        <% end %>

        <td><div class='btn-group'>
          <%= link_to image_tag("/assets/ico/glasses.svg", height: '24', width: '24') + " Show", event, class: "btn btn-small btn-info" %>
          <%= link_to image_tag("/assets/ico/pencil.svg", height: '24', width: '24') + " Edit", edit_event_path(event), class: "btn btn-small btn-primary" %>
          <%= link_to image_tag("/assets/ico/trash.svg", height: '24', width: '24') + " Destroy", event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to image_tag("/assets/ico/add.svg", height: '24', width: '24') + " New Event", new_event_path, :method => :get, class: "btn btn-small btn-success" %>
