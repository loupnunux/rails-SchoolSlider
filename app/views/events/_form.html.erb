<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :event_comment %>
  </div>

  <div class="field">
    <%= form.label :day %>
    <%= form.date_select :day, id: :event_day %>
  </div>

  <div class="field">
    <%= form.label :allday %>
    <%= form.check_box :allday, id: :event_allday %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.time_select :start, id: :event_start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.time_select :end, id: :event_end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
