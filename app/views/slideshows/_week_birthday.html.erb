        <% end %>
      </td>
      <td><!--Dimanche-->
        <% @students.each do |student| %>
          <% if sunday.to_s.split(' ')[0].split('-')[1] == student.birth.to_s.split(' ')[0].split('-')[1]
               if sunday.to_s.split(' ')[0].split('-')[2] == student.birth.to_s.split(' ')[0].split('-')[2] %>
