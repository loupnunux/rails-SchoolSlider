        <% end %>
      </td>
      <td><!--Samedi-->
        <% @students.each do |student| %>
          <% if saturday.to_s.split(' ')[0].split('-')[1] == student.birth.to_s.split(' ')[0].split('-')[1]
               if saturday.to_s.split(' ')[0].split('-')[2] == student.birth.to_s.split(' ')[0].split('-')[2] %>
                 <%= student.name.upcase %>
                 <%= student.first_name.titleize[0] %>.<br>
          <%   end
