               if tuesday.to_s.split(' ')[0].split('-')[2] == student.birth.to_s.split(' ')[0].split('-')[2] %>
                 <%= student.name.upcase %>
                 <%= student.first_name.titleize[0] %>.<br>
          <%   end
             end %>
        <% end %>
      </td>
      <td><!--Mercredi-->
        <% @students.each do |student| %>
          <% if wednesday.to_s.split(' ')[0].split('-')[1] == student.birth.to_s.split(' ')[0].split('-')[1]
               if wednesday.to_s.split(' ')[0].split('-')[2] == student.birth.to_s.split(' ')[0].split('-')[2] %>
                 <%= student.name.upcase %>
                 <%= student.first_name.titleize[0] %>.<br>
          <%   end
             end %>
        <% end %>
      </td>
      <td><!--Jeudi-->
        <% @students.each do |student| %>
          <% if thurstday.to_s.split(' ')[0].split('-')[1] == student.birth.to_s.split(' ')[0].split('-')[1]
               if thurstday.to_s.split(' ')[0].split('-')[2] == student.birth.to_s.split(' ')[0].split('-')[2] %>
                 <%= student.name.upcase %>
