<div class="saint">



  <div class="wall">
  <% @wall = []
  @slides.each do |wallpaper|
    if (wallpaper.saint)
      @wall << wallpaper.id
    end
  end %>

  <img src="<%= @slides[@wall[rand(@wall.size)].to_i - 1].picture.url(:full, timestamp: false) %>" style="height: 100vh; width:100vw;">

  </div>


  <div class='title'>
    Bonne fête
  </div>

  <div class="text">

    Aujourd'hui,<br>
    <%= @week[Time.now.strftime("%w").to_i] %> <%= Time.now.strftime("%d") %> <%= @month[Time.now.strftime("%m").to_i - 1] %>,<br>
    nous fêtons :<br>
    <% @list_saint.each do |saint| %>
      <% if saint == @list_saint.first %>
        les <div class="txt_saint"><%= saint %></div>
      <% elsif saint == @list_saint.last %>
        et les <div class="txt_saint"><%= saint %></div>
      <% else %>
        , les <div class="txt_saint"><%= saint %></div>
      <%end%>
    <% end %>

  </div>

</div>
