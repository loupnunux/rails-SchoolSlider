<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>First name</th>
      <th>Class room</th>
      <th>Birth</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.class_room %></td>
        <td><%= student.birth %></td>
        <td><div class='btn-group'>
          <%= link_to image_tag("/assets/ico/glasses.svg", height: '24', width: '24') + " Show", student, class: "btn btn-small btn-info" %>
          <%= link_to image_tag("/assets/ico/pencil.svg", height: '24', width: '24') + " Edit", edit_student_path(student), class: "btn btn-small btn-primary" %>
          <%= link_to image_tag("/assets/ico/trash.svg", height: '24', width: '24') + " Destroy", student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to image_tag("/assets/ico/add.svg", height: '24', width: '24') + " New Student", new_student_path, :method => :get, class: "btn btn-small btn-success" %>
