<p id="notice"><%= notice %></p>

<h1>Learns</h1>

<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learns.each do |learn| %>
      <tr>
        <td><%= learn.quote %></td>
        <td><%= Author.find(learn.author_id).name %></td>
        <td><%= link_to 'Show', learn %></td>
        <td><%= link_to 'Edit', edit_learn_path(learn) %></td>
        <td><%= link_to 'Destroy', learn, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

