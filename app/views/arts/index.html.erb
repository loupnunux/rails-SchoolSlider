<p id="notice"><%= notice %></p>

<h1>Arts</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Thumb</th>
      <th>Author</th>
      <th>Typeart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.titre %></td>
        <td><%= image_tag art.picture.url(:thumb) %></td>
        <% if art.author_id.present? %>
          <td><%= Author.find(art.author_id).name %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><%= art.typeart %></td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

